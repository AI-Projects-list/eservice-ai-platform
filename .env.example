# Environment Configuration Example
# Copy this file to .env and update with actual values

# Application
APP_NAME=eService AI Platform
VERSION=1.0.0
ENVIRONMENT=development
PRODUCTION=false
DEBUG=true
LOG_LEVEL=INFO
WORKERS=4

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/eservice
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false
DATABASE_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5
CACHE_DEFAULT_TTL=3600
CACHE_MAX_TTL=86400

# Message Queue
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_PREFETCH_COUNT=10
RABBITMQ_TIMEOUT=10

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TIMEOUT=300

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_DEFAULT_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048
OPENAI_TIMEOUT=30

# Claude/Anthropic
CLAUDE_API_KEY=
CLAUDE_DEFAULT_MODEL=claude-3-opus-20240229
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=2048
CLAUDE_TIMEOUT=30

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# LLM Configuration
ACTIVE_LLM_PROVIDER=openai
LLM_FALLBACK_PROVIDER=claude
LLM_ENABLE_FUNCTION_CALLING=true
LLM_ENABLE_STREAMING=false

# Vector Database
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-west2-gcp
PINECONE_INDEX_NAME=eservice-knowledge-base

MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_DATABASE=eservice
MILVUS_COLLECTION=knowledge_base

VECTOR_DB_TYPE=milvus
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# RAG Configuration
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.6
ENABLE_RERANKING=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Jaeger Tracing
JAEGER_ENABLED=true
JAEGER_HOST=localhost
JAEGER_PORT=6831
JAEGER_SAMPLER_TYPE=probabilistic
JAEGER_SAMPLER_RATE=0.1

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001

# Logging
LOG_FORMAT=json
STRUCTURED_LOGGING=true
LOG_SQL_QUERIES=false

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=eservice-logs

# Feature Flags
ENABLE_AI_RESPONSES=true
ENABLE_AUTO_ROUTING=true
ENABLE_KNOWLEDGE_BASE=true
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60
